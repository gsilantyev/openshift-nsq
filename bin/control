#!/bin/bash
set -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH
#source ${OPENSHIFT_NSQ_DIR}/bin/util

cd ${OPENSHIFT_DATA_DIR}/nsq-0.3.5/bin
./nsqlookupd && nsqd --lookupd-tcp-address=127.0.0.1:4160 && nsqadmin --lookupd-http-address=127.0.0.1:4161 && curl -d 'hello world 1' 'http://127.0.0.1:4151/put?topic=test' && nsq_to_file --topic=test --output-dir=/tmp --lookupd-http-address=127.0.0.1:4161
